# Port Configuration
API_PORT=8000
ASR_PORT=8001
LLM_PORT=8002
TTS_PORT=8003
SARDAUKAR_PORT=8004
OLLAMA_PORT=11434
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Service URLs
ASR_SERVICE_URL=http://asr:8001
LLM_SERVICE_URL=http://llm:8002
TTS_SERVICE_URL=http://tts:8003
SARDAUKAR_TRANSLATOR_URL=http://sardaukar-translator:8004

# Model Configuration
WHISPER_MODEL=base
LLM_MODEL_NAME=llama-3.1-8b-instant
PIPER_MODEL=en_US-lessac-medium

# LLM Provider Configuration
# Options: ollama, groq, openai, anthropic, gemini
LLM_PROVIDER=groq
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://api.groq.com/openai/v1
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODE=disabled

# Database Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
CHROMA_HOST=chroma
CHROMA_PORT=8000

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_RETENTION=200h
METRICS_SCRAPE_INTERVAL=15s
SERVICE_SCRAPE_INTERVAL=10s

# Deployment Configuration
DEPLOYMENT_PROFILE=lightweight
SARDAUKAR_ENABLED=false
METRICS_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s

# Volume Paths
DUCKDB_DATA_PATH=./data
OLLAMA_DATA_PATH=./ollama_data
PROMETHEUS_DATA_PATH=./prometheus_data
GRAFANA_DATA_PATH=./grafana_data